version: "3.7"

services:
  namenode:
    image: gudari/hadoop:<%= version %>
    container_name: namenode
    hostname: namenode
    ports:
    - "50070:50070"
    volumes:
      - ./storage/namenode:/hadoop/dfs/name
    environment:
      - CLUSTER_NAME=local
    env_file:
      - ./hadoop.env

  datanode:
    image: gudari/hadoop:<%= version %>
    container_name: datanode
    hostname: datanode
    volumes:
      - ./storage/datanode:/hadoop/dfs/data
    environment:
<% if version =~ /^2\./ -%>
      SERVICE_PRECONDITION: "namenode:50070"
<% else -%>
      SERVICE_PRECONDITION: "namenode:9870"
<% end -%>
    depends_on:
      - namenode
    env_file:
      - ./hadoop.env

  resourcemanager:
    image: gudari/hadoop:<%= version %>
    container_name: resourcemanager
    hostname: resourcemanager
    environment:
<% if version =~ /^2\./ -%>
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075"
<% else -%>
      SERVICE_PRECONDITION: "namenode:9870 datanode:9864"
<% end -%>
    depends_on:
      - namenode
      - datanode
    env_file:
      - ./hadoop.env

  nodemanager:
    image: gudari/hadoop:<%= version %>
    container_name: nodemanager
    hostname: nodemanager
    environment:
<% if version =~ /^2\./ -%>
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
<% else -%>
      SERVICE_PRECONDITION: "namenode:9870 datanode:9864 resourcemanager:8088"
<% end -%>
    depends_on:
      - namenode
      - datanode
      - resourcemanager
    env_file:
      - ./hadoop.env

  historyserver:
    image: gudari/hadoop:<%= version %>
    container_name: historyserver
    hostname: historyserver
    environment:
<% if version =~ /^2\./ -%>
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
<% else -%>
      SERVICE_PRECONDITION: "namenode:9870 datanode:9864 resourcemanager:8088"
<% end -%>
    depends_on:
      - namenode
      - datanode
      - resourcemanager
    env_file:
      - ./hadoop.env

  timelineserver:
    image: gudari/hadoop:<%= version %>
    container_name: timelineserver
    hostname: timelineserver
    environment:
<% if version =~ /^2\./ -%>
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
<% else -%>
      SERVICE_PRECONDITION: "namenode:9870 datanode:9864 resourcemanager:8088"
<% end -%>
    depends_on:
      - namenode
      - datanode
      - resourcemanager
    env_file:
      - ./hadoop.env

  hoster:
    image: dvdarias/docker-hoster
    container_name: hadoop_hoster
    hostname: hadoop_hoster
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock
      - /etc/hosts:/tmp/hosts
