version: "3.8"

services:

  hive-metastore:
    image: gudari/hive:<%= version %>
    ports:
    - "9083:9083"
    env_file:
      - ./hive.env
      - ./hadoop.env
    container_name: hive-metastore
    hostname: hive-metastore
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 hive-metastore-mysql:3306"
    depends_on:
      - namenode
      - datanode
      - hive-metastore-mysql
    networks:
      - docker.local

  hive-hiveserver2:
    image: gudari/hive:<%= version %>
    ports:
    - "10000:10000"
    env_file:
      - ./hive.env
      - ./hadoop.env
    container_name: hive-hiveserver2
    hostname: hive-hiveserver2
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 hive-metastore-mysql:3306 hive-metastore:9083"
    depends_on:
      - namenode
      - datanode
      - hive-metastore-mysql
      - hive-metastore
    networks:
      - docker.local

  hive-metastore-mysql:
    image: mysql:5.6.40
    ports:
    - "3306:3306"
    env_file:
      - ./mysql.env
    container_name: hive-metastore-mysql
    hostname: hive-metastore-mysql
    networks:
      - docker.local

  hue:
    image: gudari/hue:<%= hue_version %>
    container_name: hue
    hostname: hue
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
    env_file:
    - ./hue.env
    networks:
      - docker.local

  oozie:
    image: gudari/oozie:<%= oozie_version %>
    container_name: oozie
    hostname: oozie
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
    env_file:
    - ./oozie.env
    - ./hadoop.env
    networks:
      - docker.local

  namenode:
    image: gudari/hadoop:<%= hadoop_version %>
    container_name: namenode
    hostname: namenode
    ports:
    - "50070:50070"
    environment:
      - CLUSTER_NAME=local
    env_file:
      - ./hadoop.env
    networks:
      - docker.local

  datanode:
    image: gudari/hadoop:<%= hadoop_version %>
    container_name: datanode
    hostname: datanode
    ports:
    - "50075:50075"
    environment:
      SERVICE_PRECONDITION: "namenode:50070"
    depends_on:
      - namenode
    env_file:
      - ./hadoop.env
    networks:
      - docker.local

  resourcemanager:
    image: gudari/hadoop:<%= hadoop_version %>
    container_name: resourcemanager
    hostname: resourcemanager
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075"
    depends_on:
      - namenode
      - datanode
    env_file:
      - ./hadoop.env
    networks:
      - docker.local

  nodemanager:
    image: gudari/hadoop:<%= hadoop_version %>
    container_name: nodemanager
    hostname: nodemanager
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
    depends_on:
      - namenode
      - datanode
      - resourcemanager
    env_file:
      - ./hadoop.env
    networks:
      - docker.local

  historyserver:
    image: gudari/hadoop:<%= hadoop_version %>
    container_name: historyserver
    hostname: historyserver
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
    depends_on:
      - namenode
      - datanode
    env_file:
      - ./hadoop.env
    networks:
      - docker.local

  timelineserver:
    image: gudari/hadoop:<%= hadoop_version %>
    container_name: timelineserver
    hostname: timelineserver
    environment:
      SERVICE_PRECONDITION: "namenode:50070 datanode:50075 resourcemanager:8088"
    depends_on:
      - namenode
      - datanode
    env_file:
      - ./hadoop.env
    networks:
      - docker.local

  hoster:
    image: dvdarias/docker-hoster
    container_name: hive_hoster
    hostname: hive_hoster
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock
      - /etc/hosts:/tmp/hosts
    networks:
      - docker.local

networks:
  docker.local:
    driver: bridge
    name: docker.local