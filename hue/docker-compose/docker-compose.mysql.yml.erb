version: "3.8"

services:
  hue:
    image: gudari/hue:<%= version %>
    container_name: hue
    hostname: hue
    env_file:
    - hue-mysql.env

  mysql-hue:
    image:mysql:<%= mysql_version %>
    container_name: mysql-hue
    hostname: mysql-hue
    ports:
    - "3306:3306"
    env_file:
      - ./mysql.env

  hoster:
    image: dvdarias/docker-hoster
    container_name: hadoop_hoster
    hostname: hue_hoster
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock
      - /etc/hosts:/tmp/hosts